@import "power-common"

mainbox {
    children: [ promptpad, listview ];
}

promptpad {
    orientation: horizontal;
    children: [ pad, prompt, pad ];
}

prompt {
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    font: "Hack Nerd Font 30";
}

listview {
    layout: vertical;
    columns: 2;
}

element {
    padding: 0.5em;
}
