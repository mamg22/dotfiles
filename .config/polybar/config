[bar/main]
width = 100%
height = 19
offset-x = 0%
offset-y = 0%
fixed-center = true

background = ${colors.barbg}
foreground = ${colors.barfg}

font-0 = Hack:size=9;2
font-1 = Font Awesome 5 Free Solid:size=9;2
font-2 = Font Awesome 5 Free Solid:size=11;3
font-3 = Hack:size=9;0

modules-left = pulseaudio mpd
modules-center = bspwm i3
modules-right = bspwm-mode xkeyboard memory cpu wlan eth battery date

tray-position = right
tray-padding = 2

wm-restack = bspwm

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.darkgray}
format-padding = 0

label-layout = "%icon%"
layout-icon-0 = latam;ve
layout-icon-1 = us;us

[module/bspwm]
type = internal/bspwm

format = <label-state>

;ws-icon-0  = 1;
;ws-icon-1  = 2;
;ws-icon-2  = 3;●
;ws-icon-3  = 4;●
;ws-icon-4  = 5;●
;ws-icon-5  = 6;●
;ws-icon-6  = 7;●
;ws-icon-7  = 8;
;ws-icon-8  = 9;●
;ws-icon-9  = 10;
