#!/bin/sh

name="${0##*/}"

device_list="$(kdeconnect-cli --list-available --id-name-only 2>/dev/null)"

isatty() {
    test -t 0
}

msg() {
    if isatty; then
        echo >&2 "$name: $*"
    else
        notify-send "$name" "$*"
    fi
}

device_count="$(
    printf "$device_list" | (
        count=0
        while read -r line || [ -n "$line" ]; do
            count="$(($count + 1))"
        done
        echo "$count"
    )
)"

device=""

if [ "$device_count" -eq 0 ]; then
    msg "No devices connected"
    exit 1
elif [ "$device_count" -eq 1 ]; then
    device="$device_list"
elif [ "$device_count" -ge 2 ]; then
    msg "More than one device connected, select one"
    if isatty; then
        device="$(echo "$device_list" | fzf --prompt "Device: " \
        --header "More than one device connected, select one" \
        --height 10)"
    else
        device="$(echo "$device_list" | rofi -dmenu -p "Device")"
    fi
else
    msg "Error while getting device list"
    exit 4
fi

echo "${device%% *}"
